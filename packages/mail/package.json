{
    "name": "@karr/mail",
    "private": true,
    "type": "module",
    "scripts": {
        "check:lint": "eslint . --max-warnings 0",
        "lint": "eslint . --max-warnings 0 --fix",
        "dev": "MAIL_PREVIEW=true email dev --port 3003 --dir ./src/templates",
        "check:types": "tsc --noEmit",
        "test": "vitest"
    },
    "exports": {
        ".": {
            "default": "./src/index.tsx"
        },
        "./templates/*": {
            "default": "./src/templates/*.tsx"
        }
    },
    "dependencies": {
        "@karr/config": "workspace:*",
        "@karr/logger": "workspace:*",
        "@karr/util": "workspace:*",
        "@react-email/components": "catalog:mail",
        "react": "catalog:web",
        "react-dom": "catalog:web",
        "resend": "catalog:api",
        "std-env": "catalog:utils"
    },
    "devDependencies": {
        "@karr/eslint-config": "workspace:*",
        "@karr/tsconfig": "workspace:*",
        "@react-email/preview-server": "catalog:mail",
        "@types/node": "catalog:types",
        "@types/react": "catalog:types",
        "@types/react-dom": "catalog:types",
        "eslint": "catalog:lint",
        "react-email": "catalog:mail",
        "typescript": "catalog:devtools",
        "vite-tsconfig-paths": "catalog:test",
        "vitest": "catalog:test"
    }
}
