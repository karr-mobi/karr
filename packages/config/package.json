{
    "name": "@karr/config",
    "private": true,
    "type": "module",
    "scripts": {
        "check:lint": "eslint . --max-warnings 0",
        "lint": "eslint . --max-warnings 0 --fix",
        "dev": "pnpm run --filter '@karr/util' build && tsdown --watch",
        "build": "tsdown",
        "check:types": "tsc --noEmit",
        "test": "vitest",
        "schema:write": "tsx src/export-schema.ts"
    },
    "exports": {
        ".": {
            "types": "./dist/config.d.ts",
            "default": "./dist/config.js"
        }
    },
    "dependencies": {
        "@karr/util": "workspace:*",
        "confbox": "catalog:utils",
        "tinyrainbow": "catalog:utils",
        "zod": "catalog:utils",
        "std-env": "catalog:utils",
        "defu": "catalog:utils"
    },
    "devDependencies": {
        "@karr/build-plugins": "workspace:*",
        "@karr/eslint-config": "workspace:*",
        "@karr/tsconfig": "workspace:*",
        "@types/node": "catalog:types",
        "eslint": "catalog:lint",
        "tsdown": "catalog:devtools",
        "typescript": "catalog:devtools",
        "vite-tsconfig-paths": "catalog:test",
        "vitest": "catalog:test"
    }
}
