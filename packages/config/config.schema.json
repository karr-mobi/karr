{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "APPLICATION_NAME": {
            "type": "string"
        },
        "APP_URL": {
            "type": "string",
            "format": "uri"
        },
        "AUTH_ISSUER": {
            "type": "string",
            "format": "uri"
        },
        "API_PORT": {
            "type": "number",
            "exclusiveMinimum": 0
        },
        "API_BASE": {
            "type": "string"
        },
        "LOG_TIMESTAMP": {
            "type": "boolean"
        },
        "LOG_LEVEL": {
            "type": "string",
            "enum": ["trace", "debug", "info", "warn", "error"]
        },
        "ADMIN_EMAIL": {
            "type": "string",
            "format": "email",
            "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
        },
        "AUTH_PROVIDERS": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "name": {
                                "anyOf": [
                                    {
                                        "type": "string",
                                        "const": "password"
                                    },
                                    {
                                        "type": "string",
                                        "const": "code"
                                    }
                                ]
                            },
                            "trusted": {
                                "default": false,
                                "type": "boolean"
                            }
                        },
                        "required": ["name"],
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "const": "google"
                            },
                            "clientID": {
                                "type": "string"
                            },
                            "query": {
                                "type": "object",
                                "propertyNames": {
                                    "type": "string"
                                },
                                "additionalProperties": {
                                    "type": "string"
                                }
                            },
                            "trusted": {
                                "default": false,
                                "type": "boolean"
                            }
                        },
                        "required": ["name", "clientID"],
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "properties": {
                            "name": {
                                "anyOf": [
                                    {
                                        "type": "string",
                                        "const": "github"
                                    }
                                ]
                            },
                            "clientID": {
                                "type": "string"
                            },
                            "clientSecret": {
                                "type": "string"
                            },
                            "query": {
                                "type": "object",
                                "propertyNames": {
                                    "type": "string"
                                },
                                "additionalProperties": {
                                    "type": "string"
                                }
                            },
                            "trusted": {
                                "default": false,
                                "type": "boolean"
                            }
                        },
                        "required": ["name", "clientID", "clientSecret"],
                        "additionalProperties": false
                    }
                ]
            }
        },
        "RESEND_API_KEY": {
            "type": "string"
        },
        "DB_CONFIG": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "password_file": {
                    "type": "string"
                },
                "db_name": {
                    "type": "string"
                },
                "ssl": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
