---
import apiRoutes from "@karr/api/routes" with { type: "json" }

//biome-ignore  lint/correctness/noUnusedVariables: it's used in the astro template
const routes = apiRoutes
---

<div class="p-4">
    <h1 class="text-xl font-bold mb-4">API Routes</h1>

    <div class="space-y-4">
        {routes.map((route) => (
            <div class="border rounded p-3 bg-gray-50">
                <h2 class="font-mono text-lg">
                    <span class={`inline-block px-2 py-1 mr-2 rounded text-sm font-bold ${
                        route.method === 'GET' ? 'bg-blue-100 text-blue-800' :
                        route.method === 'POST' ? 'bg-green-100 text-green-800' :
                        route.method === 'PUT' ? 'bg-yellow-100 text-yellow-800' :
                        route.method === 'DELETE' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800'
                    }`}>
                        {route.method}
                    </span>
                    {route.path}
                </h2>
                <!-- <p class="text-gray-600 mt-1">Handler: <code class="bg-gray-100 px-1 py-0.5 rounded">{route.handler}</code></p> -->
            </div>
        ))}
    </div>
</div>
