{
    "format_on_save": "on",
    "code_actions_on_format": {
        "source.organizeImports.biome": true
    },
    "formatter": {
        "language_server": {
            "name": "biome"
        }
    },
    "lsp": {
        "biome": {
            "settings": {
                "require_config_file": true
            }
        }
    },
    "languages": {
        "TypeScript": {
            "language_servers": ["typescript-language-server", "!vtsls", "..."]
        },
        "TSX": {
            "language_servers": ["typescript-language-server", "!vtsls", "..."]
        },
        "JavaScript": {
            "language_servers": ["typescript-language-server", "!vtsls", "..."]
        },
        "JSON": {
            "language_server": {
                "start": "eslint-language-server",
                "args": ["--stdio"]
            },
            "diagnostic_source": "eslint"
        }
    }
}
