{
    "format_on_save": "on",
    "code_actions_on_format": {
        "source.organizeImports.biome": true,
        "source.fixAll.biome": true
    },
    "language_servers": ["biome"],
    "languages": {
        "TypeScript": {
            "formatter": {
                "external": {
                    "command": "node_modules/@biomejs/biome/bin/biome",
                    "arguments": [
                        "check",
                        "--stdin-file-path={buffer_path}",
                        "--write"
                    ]
                }
            },
            "language_servers": [
                "biome",
                "typescript-language-server",
                "!vtsls"
            ]
        },
